<section>
    <h2>Edit article 
        
        <div class="controls">
            {{#if article.lockedStatus}}
            <a href="/articles/lock/unlock/{{article._id}}">Unlock article</a>
            {{else}}
            <a href="/articles/lock/unlock/{{article._id}}">Lock article</a>
            {{/if}}
        </div>

    </h2>
    <div class="spacer">
        <form method="POST">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="content">{{article.content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>