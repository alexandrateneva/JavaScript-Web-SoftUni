<h1>Manage orders</h1>
<div class="orders">
	{{#if orders}}
	<form method="post">
		{{#each orders}}

		<div class="order">
			<span class="order-time">{{date}}</span>
			<span class="order-name">{{product.category}} doner, {{product.size}} cm</span>
			<span class="order-status">
				<select name="{{_id}}" selected="{{status}}">
					{{#if isPending}}
					<option value="Pending" selected>Pending</option>
					<option value="In Progress">In Progress</option>
					<option value="In Transit">In Transit</option> 
					<option value="Delivered">Delivered</option>
					{{/if}}

					{{#if isInProgress}}
					<option value="Pending">Pending</option>
					<option value="In Progress" selected>In Progress</option>
					<option value="In Transit">In Transit</option> 
					<option value="Delivered">Delivered</option>
					{{/if}}

					{{#if isInTransit}}
					<option value="Pending">Pending</option>
					<option value="In Progress">In Progress</option>
					<option value="In Transit" selected>In Transit</option> 
					<option value="Delivered">Delivered</option>
					{{/if}}

					{{#if isDelivered}}
					<option value="Pending">Pending</option>
					<option value="In Progress">In Progress</option>
					<option value="In Transit">In Transit</option> 
					<option value="Delivered" selected>Delivered</option>
					{{/if}}					
				</select>
			</span>
			<a href="/order-details/{{_id}}" class="button order-button">Details</a>
		</div>
		
		{{/each}}

		<input type="submit" value="Save Changes" class="button" style="border:0">
	</form>

	{{else}}
	<p>There are no orders</p>
	{{/if}}
</div>