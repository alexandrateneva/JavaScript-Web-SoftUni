<h1>Home Page</h1>

<fieldset>
    <legend>{{selectedHotel.title}}</legend>
    <p>{{selectedHotel.location}}</p>
    <img class="hotelImg" src="{{selectedHotel.imageUrl}}" alt="hotel image">
    <p>{{selectedHotel.description}}</p>
    <div>
        <a href="/like/{{selectedHotel._id}}">
            <img class="likeBtn" src="/img/like-button-png-2.png" alt="like">
        </a>
        <a href="/dislike/{{selectedHotel._id}}">
            <img class="likeBtn" src="/img/dislike-button-png-1.png" alt="dislike">
        </a>        
         <p>Views :{{selectedHotel.views}}</p>
         <p>Likes :{{selectedHotel.likes.length}}</p>
        <span>{{selectedHotel.prop}}</span>
    </div>

</fieldset>

{{#each selectedHotel.comments}}
<fieldset>
    <legend>
        <p>{{this.creator}}</p>
    </legend>
    <p><strong>{{this.title}}</strong></p>
    <p>{{this.content}}</p>
    <p>{{this.date}}</p>
</fieldset>
{{/each}}

<div class="login-page">
    <div class="form">
        <form action="/comment/{{selectedHotel._id}}" method="POST" class="create-form">
            <input type="text" name='title' placeholder="Title" />
            <textarea name="content" id="" cols="35" rows="10" placeholder="comment"></textarea>
            <br>
            <button type="submit">create</button>
        </form>
    </div>
</div>
