<div class="login-page">
  <div class="form">
    {{#if globalError}}
    <form action="/addHotel" method="POST" class="create-form">
      <input type="text" name='title' value="{{hotel.title}}" />
      <input type="text" name='location' value="{{hotel.location}}" />
      <input type="text" name='imageUrl' value="{{hotel.imageUrl}}" />

      <select class='picker' name="category" value="{{hotel.category}}">
        {{#each categories}}
        <option value="{{name}}">{{name}}</option>
        {{/each}}
      </select>
      <br>
      <br>
      <textarea name="description" id="" cols="35" rows="10" placeholder="description">{{hotel.description}}</textarea>
      <br>

      <button type="submit">create</button>
    </form>
    {{else}}
    <form action="/addHotel" method="POST" class="create-form">
      <input type="text" name='title' placeholder="Title" />
      <input type="text" name='location' placeholder="Location" />
      <input type="text" name='imageUrl' placeholder="Image Url" />

      <select class='picker' name="category">
        {{#each categories}}
        <option value="{{name}}">{{name}}</option>
        {{/each}}
      </select>
      <br>
      <br>
      <textarea name="description" id="" cols="35" rows="10" placeholder="description"></textarea>
      <br>

      <button type="submit">create</button>
    </form>
    {{/if}}

  </div>
</div>